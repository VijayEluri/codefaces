<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.rap.ui.entrypoint">
      <entrypoint
            class="org.codefaces.ui.entryPoints.CodeFacesEntryPoint"
            id="org.codefaces.ui.entrypoint.codefaces"
            parameter="codefaces">
      </entrypoint>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.codefaces.ui.perspectives.CodeFacesPerspectiveFactory"
            id="org.codefaces.ui.perspective.codefaces"
            name="Code Faces">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.codefaces.ui.category.codefaces"
            name="Code Faces">
      </category>
      <view
            allowMultiple="false"
            category="org.codefaces.ui.category.codefaces"
            class="org.codefaces.ui.views.ProjectExplorerViewPart"
            id="org.codefaces.ui.view.projectExplorer"
            name="Project Explorer"
            restorable="true">
      </view>
      <view
            allowMultiple="true"
            category="org.codefaces.ui.category.codefaces"
            class="org.codefaces.ui.views.CodeExplorerViewPart"
            id="org.codefaces.ui.view.codeExplorer"
            name="Code Explorer"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.rap.ui.branding">
      <branding
            defaultEntrypointId="org.codefaces.ui.entrypoint.codefaces"
            id="org.codefaces.ui.branding.codefaces"
            servletName="explore"
            themeId="org.eclipse.rap.design.example.business.theme"
            title="Code Faces">
      </branding>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="org.codefaces.menu.repository"
               label="Repository">
            <command
                  commandId="org.codefaces.ui.commands.ImportRepositoryCommand"
                  label="Import..."
                  style="push"
                  tooltip="Import project from a repository">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.codefaces.ui.commands.ImportRepositoryCommandHandler"
            description="Import from a repository"
            id="org.codefaces.ui.commands.ImportRepositoryCommand"
            name="ImportRepositoryCommand">
      </command>
      <command
            defaultHandler="org.codefaces.ui.commands.SwitchRepositoryBranchCommandHandler"
            description="Switch to another Repository Branch without switching the repository"
            id="org.codefaces.ui.commands.switchRepositoryBranchCommand"
            name="switchRepositoryBranchCommand">
         <commandParameter
               id="org.codefaces.ui.commands.parameters.switchRepositoryBranch.newBranch"
               name="newBranch"
               optional="true">
         </commandParameter>
      </command>
   </extension>
   <extension
         point="org.eclipse.equinox.http.registry.resources">
      <resource
            alias="/"
            base-name="public">
      </resource>
   </extension>
</plugin>
